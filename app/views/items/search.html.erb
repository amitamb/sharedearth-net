<div id="search-page" class="clearfix">
	
	<%= render :partial => "shared/search_sidebar" %>
	
	<div id="content">
		
		<div class="content-box-holder no-bg">
		  <div class="search-holder">
					    <%= form_tag items_path, :method => 'get' do %>
                <div>
                  <%= text_field_tag :search, params[:search] %>
                  <button type="submit" title="Search">Search</button>
                </div>
              <% end %>
		  </div>
			<h2>
				<%= link_to image_tag('ic-items-community.png', :alt => "Items", :title => "Items") %>
				Items in 
				<%= link_to image_tag('ic-village-comm.png', :alt => "Village", :title => "Village") %>
				Sydney
			</h2>
			
			<% if @trusted.empty? && @extended.empty?%>
			  <h3>Sorry, nothing matches your search criteria</h3>
			<% end %>
			
  		<% if !@trusted.empty?%>
			<div class="items-list clearfix">
				<h3 class="default-title">
					From your trusted network
				</h3>
				<ul class="clearfix">
				<% @trusted.each do |item| %>
          <%= render :partial => "item", :locals => {:item => item} %>
        <% end if !@trusted.nil?%>
				</ul>
				<a href="#" class="button-more">
					2 more
				</a>
			</div><!-- /trusted items-list -->
			<% end %>
			<% if !@extended.empty?%>
			<div class="items-list clearfix">
				<h3>
					From your extended network
				</h3>
				<ul class="clearfix">
					<% @extended.each do |item| %>
          <%= render :partial => "item", :locals => {:item => item} %>
        <% end%>
				</ul>
				<a href="#" class="button-more">
					23 more
				</a>
			</div><!-- /extended items-list -->
			<% end %>
		
		</div><!-- /content-box-holder  -->
		
	</div><!--	/content -->
	
</div><!--	/search-page -->

