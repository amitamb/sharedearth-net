	<div id="manage-resources-page">
		<div id="sidebar-left">
			
		
			<ul>
				<li class="all">
					<a href="#">All results</a>
				</li>
				<li class="items selected">
					<a href="#">Items</a>
				</li>
				<li class="people">
					<a href="#">Skils</a>
				</li>
			</ul>
		
		</div><!--	/sidebar-left	-->
	
		<div id="content">
		
			<div class="content-box-holder no-bg">
			
				<h2>Manage your Resources</h2>
				
				<ul class="action-buttons-list clearfix">
					<li>
						<a class="positive" href="#">+ Spaces</a>
					</li>
				</ul>
				
				<div class="items-list clearfix">
					<h3 class="default-title">Items</h3>
					
					<ul class="clearfix">
						<% @items.each do |item| %>
						<li class="item clearer">
							<a href="/items/5">
								<%= image_tag item.photo.url(:small), :class => "thumb" %>
							</a>
					        <div>
								<p>
		  							<a href="/items/5" class="positive"><%= item.name %></a>&nbsp;|&nbsp;
									<a href="#"><%= item.item_type %></a>&nbsp;|
									<%= item.description %>		
								</p>
								<ul class="action-list">
									<li>
										<a href="/items/5"><%= link_to 'show', item %></a>
									</li>
									<% if item.normal? %>
								    	<li><%= link_to 'edit', edit_item_path(item) %></li>
								    <% end %>
									<% if item.available? -%>
									<li>
										<%= link_to 'Delete', item, :confirm => 'Are you sure?', :method => :delete %>
									</li>
									<% end -%>
								</ul>
							</div>
						</li>
						<% end if !@items.nil?%>
					</ul>
					
					<ul class="action-buttons-list clearfix">
						<li>
							<%= link_to 'New Item', new_item_path, :class => "positive" %>
						</li>
					</ul>
					
					
					<h3 class="default-title">Skils</h3>
					
					<ul class="clearfix">

						<li class="item clearer">
							<a href="/items/5"><img alt="5-cd-square" class="thumb" src="http://s3.amazonaws.com/sharedearth-development-pedja/item-photos/5-cd-square.png?1305202652" />
							</a>
					        <div>
								<p>
		  							<a href="/items/5" class="positive">Sample item</a>&nbsp;|&nbsp;
									<a href="#">Sample type</a>&nbsp;|
									share		
								</p>
								<ul class="action-list">
									<li>
										<a href="/items/5">view</a>
									</li>
									<li>
										<a href="/items/5">edit</a>
									</li>
									<li>
										<a href="/items/5">lost</a>
									</li>
									<li>
										<a href="/items/5">damaged</a>
									</li>
									<li>
										<a href="/items/5">delete</a>
									</li>
								</ul>
							</div>
						</li>
					</ul>
					
				</div><!-- /items-list -->
		
			</div><!-- /content-box-holder  -->
		
		</div><!--	/content -->
		
	</div><!--	/manage-resources-page-->

<!--
	Manage resources by predrag end
-->

