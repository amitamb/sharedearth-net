<!--
	search static begin
-->

<div id="search-holder" class="clearfix">
	
	<div id="sidebar-left">
		
		<h2>Show</h2>
		
		<ul>
			<li class="all">
				<a href="#">All results</a>
			</li>
			<li class="items selected">
				<a href="#">Items</a>
			</li>
			<li class="people">
				<a href="#">People</a>
			</li>
			<li class="community">
				<a href="#">Communities</a>
			</li>
			<li>
				<a href="#">Villages</a>
			</li>
			<li class="separator">
				&nbsp;
			</li>
			<li class="all">
				<a href="#">All your networks</a>
			</li>
			<li class="community">
				<a href="#">Evolver Sydney</a>
			</li>
			<li class="community">
				<a href="#">Sydney Java Community</a>
			</li>
			<li class="village selected">
				<a href="#">Sydney</a>
			</li>
			<li class="village">
				<a href="#">Newtown</a>
			</li>
		</ul>
		
	</div><!--	/sidebar-left	-->
	
	<div id="content">
		
		<div class="content-box-holder no-bg">
		  <div class="search-holder">
					    <%= form_tag items_path, :method => 'get' do %>
                <div>
                  <%= text_field_tag :search, params[:search] %>
                  <button type="submit" title="Search">Search</button>
                </div>
              <% end %>
		  </div>
			<h2>
				<%= link_to image_tag('ic-items-community.png', :alt => "Items", :title => "Items") %>
				Items in 
				<%= link_to image_tag('ic-village-comm.png', :alt => "Village", :title => "Village") %>
				Sydney
			</h2>
			
			<% if @trusted.empty? && @extended.empty?%>
			  <h3>Sorry, there is no item with those words</h3>
			<% end %>
			
  		<% if !@trusted.empty?%>
			<div class="items-list clearfix">
				<h3>
					From your trusted network
				</h3>
				<ul class="clearfix">
				<% @trusted.each do |item| %>
          <li class="item clearer">
		        <%= link_to image_tag(item.photo.url(:square), :class => "thumb"), item_path(item) %>
		        <div>
							<p>
  							<%= link_to item.name, item_path(item), :class => "positive" %>&nbsp;|&nbsp;
								<%= link_to item.item_type, "#" %>&nbsp;|
								<%= item.purpose? %>		
							</p>
							<ul class="action-list">
								<li>
									<%= link_to_person(item.owner, :class => "positive capitalize") %>
								</li>
								<li>
									<%= link_to "view item", item_path(item) %>
								</li>				
								<%unless item.active_request_by?(current_user) || item.is_owner?(current_user.person)%>
								<li>
									<%= link_to "request", requests_path(:item_id => item.id), :method => :post %>
								</li>
								<% end -%>		
							</ul>
						</div>
					</li>
        <% end if !@trusted.nil?%>
				</ul>
				<a href="#" class="button-more">
					2 more
				</a>
			</div><!-- /trusted items-list -->
			<% end %>
			<% if !@extended.empty?%>
			<div class="items-list clearfix">
				<h3>
					<%= params[:search].nil? ? "Items" : "From your extended network" %>
				</h3>
				<ul class="clearfix">
					<% @extended.each do |item| %>
          <li class="item clearer">
		        <%= link_to image_tag(item.photo.url(:square), :class => "thumb"), item_path(item) %>
		        <div>
							<p>
  							<%= link_to item.name, item_path(item), :class => "positive" %>&nbsp;|&nbsp;
								<%= link_to item.item_type, "#" %>&nbsp;|
								<%= item.purpose? %>		
							</p>
							<ul class="action-list">
							  <% unless item.is_owner?(current_user.person) %>
								<li>
									<%= link_to_person(item.owner, :class => "positive capitalize") %>
								</li>
								<% end %>
								<li>
									<%= link_to "view item", item_path(item) %>
								</li>				
								<%unless item.active_request_by?(current_user) || item.is_owner?(current_user.person) %>
								<li>
									<%= link_to "request", requests_path(:item_id => item.id), :method => :post %>
								</li>
								<% end -%>		
							</ul>
						</div>
					</li>
        <% end%>
				</ul>
				<a href="#" class="button-more">
					23 more
				</a>
			</div><!-- /extended items-list -->
			<% end %>
		
		</div><!-- /content-box-holder  -->
		
	</div><!--	/content -->
	
</div><!--	/search-holder -->

