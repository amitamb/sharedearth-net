				  <% end -%>
					<div class="inner-content">
						<h2>
							<%#= image_tag("ic-village-community.png", :class => "", :alt => "")  %>
							<% if params[:type].nil? -%>
				       Your Network 
				      <% elsif trusted_network-%>
  				      Trusted Network
				       <% end -%>
						</h2>
