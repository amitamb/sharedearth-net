<!DOCTYPE html>
<html>
<head>
  <title>sharedearth.net</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= favicon_link_tag 'favicon.ico' %>
</head>
<body>

	<div id="container">
		<div id="header">

			<div class="header-lhs">
				<%= link_to "sharedearth.net", root_path, :title => "sharedearth.net - trust. share. rewrite." %>
			</div>

			<div class="header-rhs">

				<div class="clearfix">

					<div class="status-holder">
						<ul>
							<li class="feedback-rating">
								<%= link_to "100%", "#", :title => "Feedback Rating" %>
							</li>
							<li class="giftactions">
								<%= link_to current_user.person.reputation_rating.gift_actions_count.to_s, "#", :title => "Gift Actions" %>
							</li>
							<li class="people-helped">
								<%= link_to current_user.person.reputation_rating.distinct_people_count.to_s, "#", :title => "People Helped" %>
							</li>
							<li class="activity-level">
								<%= link_to current_user.person.reputation_rating.activity_level_count.to_s, "#", :title => "Activity Level" %>
							</li>
							<li class="giftact-rating">
								<% if !current_user.nil? -%>
								  <%= link_to current_user.person.gift_act_rating, "#", :title => "Giftact Rating" %>
								<% else -%>
								  <%= link_to "0", "#", :title => "Giftact Rating" %>
								<% end -%>
							</li>
						</ul>
					</div>
					<div class="logo-type-holder">
						<%= link_to "sharedearth.net", root_path, :title => "sharedearth.net - trust. share. rewrite." %>
					</div>

				</div>

				<div class="bar-holder">


					<div class="bar-holder-rhs">
						<ul>
							<li>
								<% if current_user %>
								  	<%= link_to "disconnect", signout_path %>
								<% end %>
							</li>
							<li>
								<% if current_user %>
									<%= link_to current_user.person.name, person_path(current_user.person) %>
								<% else %>
									<%= link_to "Sign in with Facebook", signin_path('facebook') %>
								<% end %>
							</li>

						</ul>
					</div>

					<div class="search-holder">
						<form action="#">
							<div>
								<input type="text" value="Search" />
								<button type="submit" title="Search">Search</button>
							</div>
						</form>
					</div>

					<div class="bar-holder-home">
						<ul>				
	                        <li>
								<% if current_user %>
							      <%= link_to image_tag("home.png"), dashboard_path, :title => "home" %>
								<% end %>
							</li>
	                    </ul>
					</div>

					<div class="bar-holder-lhs">
						<ul>
							<li>
								<%= link_to "share" %>
							</li>
							<li>
								<%= link_to "ask" %>
							</li>
							<li class="last">
								<%= link_to "view network" %>
							</li>
						</ul>
					</div>

				</div>

			</div>

		</div>
		<!-- #header -->


<% flash.each do |name, msg| %>
	<%
		# this will output all set flash messages and it will give each appropriate id
		# possible values include: flash-notice and flash-alert
		# (CSS rules also allow flash-info - which is not used at the moment)
	%>
	<%= content_tag :div, msg, :class => "message-holder flash-#{name}" %>
<% end %>

<div id="wrapper" class="clearfix">
	
	<%= yield %>

</div>

<div id="footer" class="clearfix">
	<ul>
		<li>
			<%= link_to "Home", dashboard_path %>&nbsp;|&nbsp;
		</li>
		<li>
			<%= link_to "Help" %>&nbsp;|&nbsp;
		</li>
		<li>
			<%= link_to "Contact" %>&nbsp;|&nbsp;
		</li>
		<li>
			<%= link_to "Privacy" %>&nbsp;|&nbsp;
		</li>
		<li>
			<%= link_to "Terms of Use" %>
		</li>
	</ul>
	
</div>
<!-- #footer -->

</div>
<!-- #container -->

</body>
</html>
