<div id="dashboard-page" class="clearfix">
	<div id="content">
		<% unless @requests.count.zero? %>
			<div class="content-box-holder">
				<%= image_tag("curve-top-content-box.png", :alt => "")  %>
				<ul>
					<% @requests.each do |req| %>
						<% if req.is_a? ItemRequest %>
							<li class="content-box clearfix">
								<%= link_to image_tag(item_request_photo(req, :size => :square), :class => "thumb"), request_path(req) %>
                <%= render :partial => "shared/item_request_box", :locals => {:req => req} %>			
								<% comments = req.comments%>				
			        <div class="inner-content">

				        <ul class="comment-list">
				        <%  req.comments.each do |c| -%>
				          <% person = c.user.person %>
				          <li class="clearfix">	
						        <%= image_tag person.avatar(:square), :class => "thumb" %>
						        <p>
							        <strong><%= link_to person.name, person_path(person) %></strong> <%= c.comment %>
							        <span><%= time_ago_in_words(c.created_at) %> ago</span>
						        </p>
					        </li> 
				        <% end unless comments.empty? -%>

					        <%= render :partial => 'comments/new', :locals => { :commentable => req } %>

				        </ul>
			        </div><!-- /inner-content -->	
								</div>
							</li>
						<% elsif req.is_a? PeopleNetworkRequest %>
							<li class="content-box clearfix">
								<%= image_tag(people_network_request_photo(req, :size => :square), :class => "thumb") %>
								<div class="inner-content">
									<p>
										<%= render :partial => "shared/people_network_request_sentence", :locals => { :req => req } %>
									</p>
					
									<div class="action clearfix">
										<ul>
											<li>
												<%= time_ago_in_words req.created_at %> ago
											</li>
											<%= render :partial => "shared/people_network_request_actions_compact", :locals => { :req => req } %>
										</ul>
									</div>
								</div>
							</li>
						<% end %>
					<% end %>
				</ul>

			<%= image_tag("curve-bottom-content-box.png", :alt => "")  %>
			</div>
			<!-- /content-box-holder  -->
		<% end %>
	
	
		<div class="content-box-holder">
			<%= image_tag("curve-top-content-box.png", :alt => "")  %>
		
			<ul>
				<li class="content-box clearfix">
					<h2>Recent Activity</h2>
				</li>
			
				<% @recent_activity_logs.each do |activity_log| %>

					<li class="content-box clearfix">
						<%= image_tag recent_activity_avatar(activity_log).avatar(:square), :class => "thumb" %>

						<div class="inner-content">
							<%= render :partial => "shared/activity_log_entry", :locals => { :activity_log => activity_log } %>
						</div>
					</li>
				<% end unless @recent_activity_logs.nil?%>
				<!-- Nebojsa-todo - button-more is static  -->
				<li class="content-box clearfix">
					<a href="#" class="button-more">
						more
					</a>
				</li>
			
			</ul>
			<%= image_tag("curve-bottom-content-box.png", :alt => "")  %>
		</div>
		<!-- /content-box-holder  -->
	

	</div><!-- /content  -->

	<div id="sidebar">
		<%= render :partial => "shared/news_feed_person", :locals => { :events => @events, :title => 'News feed' } %>
		<%= image_tag("bg-empty-village.png", :alt => "", :class => "empty-village")  %>
	</div><!-- /sidebar -->
</div><!--	/dashboard -->
