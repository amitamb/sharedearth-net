<h1>Dashboard</h1>

<h2>Requests</h2>
<% unless @all_item_requests.size.zero? %>
	<ul>
		<% @all_item_requests.each do |req| %>
			<li>
				<%= link_to image_tag(req.requester.avatar), person_path(req.requester) %>

				<%= link_to_person(req.requester) %>
				requested <%= link_to req.item.name, item_path(req.item) %>
				from <%= link_to_person(req.gifter, :downcase_you => true) %>

				&nbsp;&nbsp;

				|
				<%= link_to 'View request', request_path(req), :id => "request_#{req.id}" %> |
				<%= render :partial => "shared/item_request_actions_compact", :locals => { :req => req } %>

			</li>
		<% end %>
	</ul>
<% else %>
	<p>No requests.</p>
<% end %>