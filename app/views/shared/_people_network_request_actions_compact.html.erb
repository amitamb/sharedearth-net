<%
	# compact version of available person network request actions based on user's role
	# for example it's used in dashboard.html.erb
%>

<% if req.requester?(current_user.person) %>
	<%= link_to "cancel", people_network_request_path(req), :method => :delete %>
<% else %>
	<%= link_to "confirm", confirm_people_network_request_path(req), :method => :put %>
	<%= link_to "deny", deny_people_network_request_path(req), :method => :put %>
<% end %>
