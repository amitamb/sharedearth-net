<%
	# compact version of available activity log actions based on activity type
	# for example used in dashboard.html.erb
%>

<% if activity_log.event_type.new_item_request_requester? || activity_log.event_type.new_item_request_gifter? %>
	<li>
		<%= link_to "view request", request_path(activity_log.related) %>
	</li>
<% end %>

<% current_user_feedback = activity_log.related.feedbacks.as_person(current_user.person)%>
<% if activity_log.event_type.completed? && current_user_feedback.empty? %>
	<li>
		<%= link_to "leave feedback", new_request_feedback_path(activity_log.related) %>
	</li>
<% elsif activity_log.event_type.completed? && activity_log.related.feedbacks.size != 0 %>
  <li>
		<%= link_to "show feedback", request_path(activity_log.related) %>
	</li>
<% end %>


